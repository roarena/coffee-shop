<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_order_detail_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_inner_layout"
        android:textSize="@dimen/quantity_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_order_detail_coffee_name"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_order_detail_coffee_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_margin_inner_layout"
        android:layout_marginStart="@dimen/minimum_margin"
        android:layout_marginTop="@dimen/default_margin_inner_layout"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/default_title_text_size"
        app:layout_constraintEnd_toStartOf="@+id/tv_order_detail_coffee_price"
        app:layout_constraintStart_toEndOf="@+id/tv_order_detail_quantity"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_order_detail_coffee_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_margin_inner_layout"
        android:layout_marginTop="@dimen/default_margin_inner_layout"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/default_title_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>