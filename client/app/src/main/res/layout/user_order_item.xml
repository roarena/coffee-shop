<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_user_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_margin_inner_layout"
        android:layout_marginTop="@dimen/minimum_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/status_new"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/default_title_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_order_price" />

    <TextView
        android:id="@+id/tv_user_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_margin_inner_layout"
        android:layout_marginTop="@dimen/default_margin_inner_layout"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/coffee_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/default_margin_inner_layout"
        android:layout_marginEnd="@dimen/default_margin_inner_layout"
        android:layout_marginStart="@dimen/default_margin_inner_layout"
        android:layout_marginTop="@dimen/default_margin_inner_layout"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_order_status" />

    <TextView
        android:id="@+id/tv_user_order_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_margin_inner_layout"
        android:layout_marginStart="@dimen/default_margin_inner_layout"
        android:layout_marginTop="@dimen/default_margin_inner_layout"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/coffee_name"
        app:layout_constraintEnd_toStartOf="@+id/tv_user_order_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_user_order_coffees"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin_inner_layout"
        android:layout_marginEnd="@dimen/default_margin_inner_layout"
        android:layout_marginStart="@dimen/default_margin_inner_layout"
        android:layout_marginTop="@dimen/default_margin_inner_layout"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_user_order_status"
        app:layout_constraintEnd_toStartOf="@+id/tv_user_order_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_user_order_status" />

</android.support.constraint.ConstraintLayout>