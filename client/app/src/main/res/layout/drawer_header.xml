<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/tv_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_margin_inner_layout"
        android:layout_marginTop="@dimen/default_margin_layout"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        android:textSize="@dimen/default_subtitle_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/iv_profile_screen_picture"
        app:layout_constraintTop_toBottomOf="@+id/iv_profile_screen_picture" />

    <TextView
        android:id="@+id/tv_profile_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin_layout"
        android:layout_marginEnd="@dimen/default_margin_inner_layout"
        android:layout_marginTop="@dimen/default_margin_inner_layout"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/iv_profile_screen_picture"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_name" />


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_profile_screen_picture"
        android:layout_width="@dimen/coffee_image_size"
        android:layout_height="@dimen/coffee_image_size"
        android:layout_marginStart="@dimen/default_margin_inner_layout"
        android:layout_marginTop="@dimen/default_margin_top"
        android:src="@drawable/profile"
        android:contentDescription="@string/contentdesc_profile_pic"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>